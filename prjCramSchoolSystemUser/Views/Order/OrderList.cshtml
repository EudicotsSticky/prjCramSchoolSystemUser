@model IEnumerable<prjCramSchoolSystemUser.ViewModel.COrderListViewModel>

@{
    ViewData["Title"] = "OrderList";
}

<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2>我的訂單</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                    <a href="@Url.Content("~/")">首頁</a>
                    <span>我的訂單</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Shopping Cart Section Begin -->
<section id="divOrderCreate" class="shopping-cart spad" style="padding-top:50px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
<table class="table">
    <thead>
        <tr>
                            <th scope="col">訂單編號</th>
                            <th scope="col">訂單日期</th>
                            <th scope="col">金額</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col">付款狀態</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
                        @{
                            if (Model != null)
                            {
                                foreach (var item in Model)
                                {
        <tr>
                                        <th scope="row">@item.order.FOrderId</th>
                                        <td>@item.order.FCreationDate</td>
                                        <td colspan="3">@item.Price</td>
                                        <td colspan="2">已付款</td>
                                        <td><button type="button" class="btn btn-primary" onclick="location.href='@Url.Content("~/Order/ReviewOrder/")@item.order.FOrderId'">查看訂單詳情</button></td>
        </tr>
}
                            }
                        }
    </tbody>
</table>
            </div>
        </div>
    </div>
</section>
