<!-- Shop Section Begin -->
<section class="shop spad" style="margin-top:0px; padding-top:0px;">

    <div class="container-xxl py-5">
        <div class="container">
            <div class="row" style="padding-bottom:60px;">
                <div class="col-lg-7 col-md-7">
                    <div class="shop__option__search">
                        <form action="#">
                            <select id="CategoryDDL">
                                <option value="全部">全部</option>
                                @{
                                    if (Model.CategoryDDL.Length > 0)
                                    {

                                        @foreach (var item in Model.CategoryDDL)
                                        {
                                            <option value="@item">@item</option>
                                        }

                                    }
                                }
                            </select>
                            <input id="txtSearch" type="text" placeholder="Search">
                            <button id="btnSearch" type="button"><i class="fa fa-search"></i></button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row g-4">
                @{
                    foreach (var item in Model.course)
                    {
                        <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.1s" style="padding-bottom:20px;">
                            <div class="service-item rounded overflow-hidden">
                                <img class="img-fluid" src="@item.PhotoName" style="width: 100%; height: 100%; object-fit: cover; ">
                                <div class="position-relative p-4 pt-0">
                                    <div class="service-icon">
                                        <span>@item.CourseState</span>
                                    </div>
                                    <div class="product__details__text product__item__text_">
                                        <h5 class="mb-3" style="border-bottom: none; padding-bottom: 0px; margin-bottom: 5px; "><a asp-action="Detail" asp-route-id="@item.FEchelonId">@item.Name</a></h5>
                                        <div class="product__item__price_"><h5 class="mb-3" style="border-bottom: none; padding-bottom: 0px; margin-bottom: 5px;">$@item.Price.ToString("###,###,##0")</h5></div>
                                        <div class="cart_add_"><a style="border-color: #5599FF" asp-action="Detail" asp-route-id="@item.FEchelonId" target="_blank">查看課程詳情</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

